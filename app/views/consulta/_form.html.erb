<%= form_with(model: consultum) do |form| %>
  <% if consultum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(consultum.errors.count, "error") %> prohibited this consultum from being saved:</h2>

      <ul>
        <% consultum.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :data %>
    <%= form.date_select :data %>
  </div>

  <div class="field">
    <%= form.label :horario %>
    <%= form.time_select :horario %>
  </div>

  <div class="field">
    <%= form.label :medico_id %>
    <%= form.collection_select(:medico_id, Medico.all, :id, :nomeCompleto, include_blank: "Escolha o medico") %>
  </div>

  <div class="field">
    <%= form.label :paciente_id %>
    <%= form.collection_select(:paciente_id, Paciente.all, :id, :nomeCompleto, include_blank: "Escolha o paciente") %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
